@model LeaveEase.Entity.ViewModel.ChangePasswordViewModel

@{
    ViewData["Title"] = "Change PassWord";
}
<div>
<div class="col-6">
        <div class="col-lg-12 d-flex justify-content-between mb-4">
            <div>
                <h1 class="fw-bold header-title">Change Password</h1>
            </div>
        </div>
   <form asp-action="ChangePassWord" method="post">
       <input type="hidden"   asp-for="Email"/>
        <div class="mb-3">
            <label class="form-label">Old Password <span class="text-danger">*</span></label>
            <div class="baricon password-box">
                    <input type="password" asp-for="OldPassword" class="searchbaricon inputshadow" id="oldPassword" placeholder="Old Password*">
                    <i class="bi bi-eye-fill eye-icon" onclick="togglePassword('oldPassword', this)"></i>
            </div>
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>
        <div class="mb-3">
             <label class="form-label">New Password <span class="text-danger">*</span></label>
            <div class="baricon password-box">
                    <input type="password" asp-for="NewPassword" class="searchbaricon inputshadow" id="newpassword" placeholder="New Password*">
                    <i class="bi bi-eye-fill eye-icon" onclick="togglePassword('newpassword', this)"></i>
            </div>
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Confirm Password <span class="text-danger">*</span></label>
            <div class="baricon password-box">
                    <input type="password" asp-for="ConfirmPassword" class="searchbaricon inputshadow" id="confirmpassword" placeholder="Confirm Password*">
                    <i class="bi bi-eye-fill eye-icon" onclick="togglePassword('confirmpassword', this)"></i>
            </div>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div>
             <button class="btn btn-primary" type="submit">Submit</button>
               <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
        </div>
   </form>
</div>
</div>

