@model LeaveEase.Entity.ViewModel.LoginViewModel;
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Forget Password";
}

<body class="loginbody">
    <div class="login-container ">
        <div class="logologin mb-5">
            <h2 style="font-weight:900; margin-top: 10px;">LeaveEase</h2>
        </div>

        <h5 class="mb-4 ms-0 text-start " style="font-weight: 600;">Forget Password,</h5>

        <form asp-action="ForgetPassword" method="post">
           
            <div class="mb-3">
                <label class="form-label">Email <span class="text-danger">*</span></label>
                <div class="baricon">
                    <input asp-for="Email" class="searchbaricon" type="email" placeholder="Email">
                    <i class="bi bi-person-fill"></i>
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>

            </div>
           
            <button type="submit" class="btn btn-primary w-100 mb-4">Send Email</button>

            <a asp-action="Login" class="text-secondary  text-decoration-none " style="margin:auto ">
                <div style="text-align: center;margin:auto ">Back to Login</div>
            </a>

        </form>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}





