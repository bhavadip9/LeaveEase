@using LeaveEase.Entity.Enum
@{
   
    ViewData["Title"] = "Leave Request List";
}

@{
    var canAddEdit = false;
    
    if (Context.Items.ContainsKey("CanAddEdit"))
    {
        canAddEdit = (bool)Context.Items["CanAddEdit"]!;
    }
   
}

<div>
    <h2 class="mb-3 header-title">
        Leave Request List
    </h2>

    <div>
        <div class="mb-3 d-flex gap-4" style="justify-content: flex-end">

            <form action="/" method="post">
                <div class="d-flex gap-2">
                                      
                    <select id="leave-time" class="form-select" aria-label="Leave Time" asp-items="@Html.GetEnumSelectList<Month>()">
                            <option selected="selected" value="all">All Time</option>
                    </select>    
              
                    <select id="leave-status" asp-items="ViewBag.StatusList" class="form-select" style="height: 50px;">
                        <option value="" selected>All Status</option>
                    </select>
                   
                </div>
            </form>
            @if (canAddEdit == true)
            {
                <button class="btn mb-3 " style="height:50px; border:1px solid #c9d0d7">
                    <a asp-controller="LeaveRequest" asp-action="LeaveRequest" class="text-decoration-none text-black"><i class="bi bi-plus-circle"></i> Add Leave Request</a>
                </button>
            }          
        </div>
 
    </div>

    <div id="LeaveRequestListDiv"></div>
    <div id="LeaveRequestDeleteDiv"></div>
</div>



@section Scripts {
	<script src="~/js/LeaveRequest.js" asp-append-version="true"></script>
}


