@using LeaveEase.Entity.Enum
@{

    ViewData["Title"] = "Leave Approve List";
}

<h2 class="mb-3  header-title">
	Leave Approve List
</h2>

<div>
    <div class="mb-3 d-flex gap-4 justify-content-end" >
        <div class="mb-3">
            <form class="d-flex" style="margin-top: 8px;">
                <input class="form-control me-2" type="search" placeholder="Search By Name" aria-label="Search" id="nameinput" maxlength="20">
                <button class="btn btn-outline-success" type="submit"><i class="bi bi-search"></i></button>
            </form>
        </div>
        <div>
                <div class="d-flex gap-2">


                <select id="leave-time" class="form-select" aria-label="Leave Time" asp-items="@Html.GetEnumSelectList<Month>()">
                    <option selected="selected" value="all">All Time</option>
                </select>

                <select id="leave-status" asp-items="ViewBag.StatusList" class="form-select" style="height: 50px;">
                    <option value="" selected>All Status</option>
                </select>
                   
                </div>
        </div>
       

        
    </div>
    <div id="LeaveApprovedListDiv"></div>
    <div id="CancelDiv"></div>
    
</div>



@section Scripts {
    <script src="/js/LeaveApproved.js"></script>
}