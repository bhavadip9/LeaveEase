@using LeaveEase.Entity.Enum
@model LeaveEase.Entity.ViewModel.LeaveApproveViewModel



<div class="container mt-4">
	<div class="row justify-content-center">
		<div class="col-md-8">
			<div class="d-flex flex-row justify-content-between mb-3">
				<h2 class=" mb-4 header-title">Leave Approve Request</h2>
				<button class="d-flex backbutton justify-content-center bg-primary-subtle rounded-2 align-items-center gap-2">
					<a asp-action="Index" class="d-flex text-decoration-none text-black gap-2">
						<i class="bi bi-chevron-left"></i>
						<p class="m-auto">Back</p>
					</a>
				</button>
			</div>

			<form asp-action="LeaveApprovePost" method="post" class="shadow" style="border:1px solid #d9c6c6; padding:4%; border-radius:1%;">
				
				<input type="hidden" asp-for="LeaveId" />

				<div class="col mb-3">
					<label class="form-label">From Date <span class="text-danger">*</span></label>
					<input type="date" disabled  asp-for="FromDate"  class="form-control" />
					<span asp-validation-for="FromDate" class="text-danger"></span>
				</div>
				<div class="col mb-3">
					<label class="form-label">To Date <span class="text-danger">*</span></label>
					<input type="date" disabled asp-for="ToDate" class="form-control" />
					<span asp-validation-for="ToDate" class="text-danger"></span>
				</div>

				<div class="mb-3 ">
					<label class="form-label">Status <span class="text-danger">*</span></label>

					<select class="form-select" asp-for="Status" asp-items="@Html.GetEnumSelectList<StatusEnum>()">
						
					</select>
			
					<span asp-validation-for="Status" class="text-danger"></span>
				</div>
				<div class="row mb-3">
					<div class="col-6">
						<label class="form-label">Actual Leave Duration</label>
						<input type="text" id="ActualLeaveDisplay" disabled class="form-control" />
						<input type="hidden" asp-for="ActualLeave" />
					</div>
					<div class="col-6">
						<label class="form-label">Total Leave Duration</label>
						<input type="text" id="TotalLeaveDisplay" disabled class="form-control" />
						<input type="hidden" asp-for="TotalLeave" />
					</div>
				</div>
				<div class="mb-3 ">
					<label class="form-label">Leave Type <span class="text-danger">*</span></label>

					<input class="form-control inputshadow" type="text" asp-for="LeaveType" disabled />
					<input class="form-control " type="hidden" asp-for="LeaveType"  />
					<span asp-validation-for="LeaveType" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label class="form-label">Leave Reason <span class="text-danger">*</span></label>
					<textarea disabled asp-for="Reason" rows="3" class="form-control hover-effect inputshadow" placeholder="Leave Reason"
							  style="height:100px"></textarea>
					<input type="hidden" asp-for="Reason" value="" />
					<span asp-validation-for="Reason" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label class="form-label">Remark</label>
					<textarea asp-for="Remark" rows="3" class="form-control hover-effect inputshadow" placeholder="Remark"
							  style="height:100px" maxlength="100"></textarea>

					<span asp-validation-for="Remark" class="text-danger"></span>
				</div>

					<button type="submit" class="btn btn-primary mb-5 ">Submit</button>
				<button type="button" class="btn mb-5 btn-secondary"> <a asp-controller="LeaveApprove" asp-action="Index" class="text-decoration-none  text-white">Cancel</a></button>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	<script src="~/js/LeaveApproved.js" asp-append-version="true"></script>
}
